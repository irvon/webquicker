//string 字符串对象
namespace string;  

class string{
	ctor( str,... ){
		if(...)
			return str,...;
			
		this.str = tostring(str);
	};
	@meta
}

var prototype = {}
string.meta = { 
	_get = prototype;
	_tostring = function(){
		return owner.str;
	}  
}
prototype.tostring =  string.meta._tostring;

for(k,func in ..string){
	 prototype[k] = function(...){
	 	return string( func(owner.str,...) )
	 } 
}
 

