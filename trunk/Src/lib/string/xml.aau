namespace string;

var push = ..table.push;
var pop = ..table.pop;
var sub = sub;
var trim = trim;

var function parseProperties (ele, str) { 
	replace(
		str, 
		"(\w+)\s*=\s*([""'])(.+?)\2", 
		function (w, a, b){
    		ele[w] = b
		} 
	) 
}

var function pushElemet(parent,ele){
	parent[ele.tag] = parent[ele.tag] or {};
	push( parent[ele.tag],ele );
	push( parent,ele );
} 

class xml{
