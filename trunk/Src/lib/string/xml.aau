			var innerText = sub(xmlstr, strfrom, tagfrom-1)
			var innerText = trim(innerText);
			if( #innerText ){ 
				push(topNode, innerText) 
				topNode.innerText = innerText
			}
			
			if #slash_back   {  
				//empty ele e.g. <tag />
				var tab = {  tag=tag; empty_ele=1}
				parseProperties( tab,properties);
